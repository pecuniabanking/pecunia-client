              00 00
              82 00 00
              00 08
              08 04 03 02
              03 
              00 00 
              00 00 00 
              00 00 00
              15 00 00 00
              00 24 00 
            </ELEM>
            <ELEM name="pid" type="byte" />
            <ELEM type="bytes" storedAs="bytes" >
              10 
              20 20 20 20 20 20 20 20
              20 20 20 20 20 20 20 20
            </ELEM>
          </APDU>
        </send>
